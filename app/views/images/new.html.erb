<h3>Here you can add a new image</h3>

<%= form_tag("/products/#{@car.id}/images", method: "post") do %>


  <div class="input-group">
    <span class="input-group-addon" id="basic-addon1">Image: </span>
    <input type="text" class="form-control" name="url" aria-describedby="basic-addon1">
  </div>

  <div>
    <button type="submit" class="btn btn-default">Submit</button>
  </div>

<% end %>